<div class="h-screen w-screen bg-cover bg-center bg-fixed m-0"
  style="font-family: 'Cabin Sketch', cursive;background-image: url(/images/background.jpg)">

  <p class="text-center text-5xl lg:text-6xl py-10" style="font-family: 'Fredericka the Great', cursive;">
    Chatmosphere</p>

  <p class="text-center text-3xl lg:text-5xl pb-10" style="font-family: 'Fredericka the Great', cursive;">
    Trust us, it's better than Facebook</p>

  <h2 class="text-center text-red-700 text-2xl mb-5">Congratulations!</h2>

  <h5>Welcome {{{currentUserName}}}, you've logged in successfully.</h5>

  <a class="btn btn-primary" href="/logout" role="button">Sign Out</a>

  <div class="w-screen flex justify-left">

    <div id="homePage" class="rounded w-4/5 lg:w-1/5 shadow-lg">

      <div id="homeContent">
        {{!-- user info --}}
        <div id="userInfo" class="text-left bg-white">
          <div class="container">
            <h5 class="userDetails">Your Info</h5>
            <div class="userDetails">
              <ul id="userName">User Name: {{{currentUserName}}}</ul>
              <ul id="email">Email: {{{currentEmail}}}</ul>
              <ul id="firstName"=>First Name: {{{currentFirstName}}}</ul>
              <ul id="lastName"=>Last Name: {{{currentLastName}}}</ul>
              <ul id="about">About: {{{currentAbout}}}</ul>
            </div>
            <a class="btn btn-primary" href="/tellusmore" role="button">Edit Your Info</a>
          </div>
        </div>

        {{!-- user list --}}
        <div id="userList" class="text-left bg-white">
          <div class="container">
            <h2>Chat Users</h2>
            {{#each user}}
            <ul>
              {{{this.userName}}}
              <form action="/chat/{{{this.userName}}}">
                <input type=" hidden" name="chat" id="chatting">
                <a class="btn btn-primary" href="/chat/{{{this.userName}}}" role="button">Chat!</a>
              </form>
            </ul>
            {{/each}}
          </div>

        </div>

      </div>

    </div>

  </div>


  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="/assets/js/home.js"></script>