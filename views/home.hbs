<div class="container">
  <div class="row">
    <div class="col-md">
      <h2>Congratulations!</h2>
      <h5>Welcome {{{user}}}, You have logged in successfully.</h5>
      <a class="btn btn-primary" href="/logout" role="button">Sign Out</a>
      <br>
      <div class="card">
        <img class="user-img" src="..." alt="user img">
        <div class="card-body">
          <h5 class="card-title">Your Info</h5>
          <div class="card-text">
            <ul id="userName">{{{userName}}}</ul>
            <ul id="email">{{{email}}}</ul>
            <ul id="firstName"=>{{{firstName}}}</ul>
            <ul id="lastName"=>{{{lastName}}}</ul>
            <ul id="about">{{{about}}}</ul>
          </div>
          <a href="#" class="btn btn-primary">Edit Profile</a>

          <div class="row">
            <div class="col-sm-6">
              <h2>Chat Users</h2>
              {{#each users}}
              <ul>
                {{this.user}}
                <form action="/chat/{{this.user}}">
                  <input type=" hidden" name="chat" id="chatting">
                  <button class="btn-primary" type="submit" id="Chat">Chat!</button>
                </form>
              </ul>
              {{/each}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>