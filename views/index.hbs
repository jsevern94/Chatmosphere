<div class="h-screen w-screen bg-cover bg-center m-0 overflow-x-hidden"
  style="background-image: url(/images/background3.jpg)">

  <h2 class="text-center text-3xl lg:text-6xl mt-20" style="font-family: 'McLaren', cursive;">
    Welcome to</h2>

  <div class="w-screen flex justify-center mt-6">
    <img class="w-11/12 md:w-2/3 lg:w-1/2" src="/images/logo.png" alt="chatmosphere logo">
  </div>

  <div id="scroll-button" class="cursor-pointer bob absolute inset-x-0 bottom-0 w-full text-center text-6xl">
    <svg class="fill-current text-indigo-600 inline-block h-32 w-32" xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 20 20">
      <path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z">
    </svg>
  </div>

</div>

<div id="section2" class="h-screen w-screen" style="font-family: 'Patrick Hand SC', cursive;">
  <div class="w-screen flex justify-center">

    <div id="login-signup" class="rounded-lg overflow-hidden w-4/5 md:w-2/5 lg:w-1/5 shadow-lg">

      <ul id="links" class="flex text-xl">
        <li class="flex-1 text-center rounded-t-lg active bg-white -mb-2"><a href="#log-in-form">Log In</a></li>
        <li class="flex-1 text-center rounded-t-lg"><a href="#sign-up-form">Sign Up</a></li>
      </ul>

      <div id="content" class="text-center bg-white">
        {{!-- log in form --}}
        <div id="log-in-form" class="tab active">
          <form id="login" name="login" method="post" action="login">
            <div class="container">
              <div class="flex py-12">
                <p class="text-xl text-blue-500 w-1/2">
                  Username: </p>
                <input
                  class="text-l appearance-none bg-transparent border-b-2 w-full text-gray-900 py-1 mx-4 leading-tight focus:outline-none focus:border-orange-300"
                  type="text" name="username" placeholder="user123" required>
              </div>
              <div class="flex pb-12">
                <p class="text-xl text-blue-500 w-1/2">
                  Password: </p>
                <input
                  class="text-l appearance-none bg-transparent border-b-2 w-full text-gray-900 py-1 mx-4 leading-tight focus:outline-none focus:border-orange-300"
                  type="password" name="password" placeholder="qwerty123" required>
              </div>
              <div class="flex pb-8 invisible">
                <p class="text-xl text-blue-500 w-1/2">
                  Confirm: </p>
                <input
                  class="text-l appearance-none bg-transparent border-b-2 w-full text-gray-900 py-1 mx-4 leading-tight focus:outline-none focus:border-orange-300"
                  type="password" name="password2" placeholder="qwerty123... again">
              </div>

              <p class="pb-4">Forgot your <a href="#">password</a>?</p>
              <button type="submit"
                class="text-xl tracking-wider bg-blue-300 hover:bg-blue-500 text-white py-2 px-4 mb-10 border border-white hover:border-transparent rounded-full">Let's
                Chat!</button>
            </div>
          </form>
        </div>

        {{!-- sign up form --}}
        <div id="sign-up-form" class="tab">
          <form id="signup" name="signup" method="post" action="signup">
            <div class="container">

              <div class="flex py-12">
                <p class="text-xl text-blue-500 w-1/2">
                  Username: </p>
                <input
                  class="text-l appearance-none bg-transparent border-b-2 w-full text-gray-900 py-1 mx-4 leading-tight focus:outline-none focus:border-orange-300"
                  type="text" name="username" placeholder="user123" required>
              </div>
              <div class="flex pb-12">
                <p class="text-xl text-blue-500 w-1/2">
                  Password: </p>
                <input
                  class="text-l appearance-none bg-transparent border-b-2 w-full text-gray-900 py-1 mx-4 leading-tight focus:outline-none focus:border-orange-300"
                  type="password" name="password" placeholder="qwerty123" required>
              </div>
              <div class="flex pb-8">
                <p class="text-xl text-blue-500 w-1/2">
                  Confirm: </p>
                <input
                  class="text-l appearance-none bg-transparent border-b-2 w-full text-gray-900 py-1 mx-4 leading-tight focus:outline-none focus:border-orange-300"
                  type="password" name="password2" placeholder="qwerty123... again" required>
              </div>

              <p class="pb-4">By creating an account you agree to our <a href="#">Terms of Service</a>.</p>

              <button type="submit"
                class="text-xl tracking-wider bg-blue-300 hover:bg-blue-500 text-white py-2 px-4 mb-10 border border-white hover:border-transparent rounded-full">Let's
                Go!</button>
            </div>
          </form>
        </div>
      </div>

    </div>

  </div>

</div>


